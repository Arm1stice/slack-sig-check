{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "rootDir": "src",
        "target": "es5",
        "module": "commonjs",
        "outDir": "lib",
        "declaration": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}